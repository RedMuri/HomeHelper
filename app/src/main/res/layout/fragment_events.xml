<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.main.EventsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_right" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_max_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_peek_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />


        <LinearLayout
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_default"
            android:background="@drawable/search_view_rounded"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/barrier_max_height"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/search_icon_margin"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/searchViewEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:layout_weight="1"
                android:background="@drawable/search_view_rounded"
                android:hint="@string/search_view_hint"
                android:orientation="horizontal"
                android:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@drawable/circle_background_ripple"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/padding_default"
            android:src="@drawable/main_bell"
            app:layout_constraintBottom_toBottomOf="@id/searchView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/gl_v2"
            app:layout_constraintStart_toEndOf="@id/searchView"
            app:layout_constraintTop_toTopOf="@id/searchView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/events_fr_services_title"
            android:textColor="@color/white"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/events_fr_more"
            android:textColor="@color/white"
            android:textSize="@dimen/main_more_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@id/gl_v2"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_default"
            android:background="@drawable/square_background"
            android:orientation="vertical"
            android:padding="@dimen/padding_default"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintEnd_toEndOf="@id/main_ll_3"
            app:layout_constraintStart_toStartOf="@id/main_ll_1"
            app:layout_constraintTop_toBottomOf="@+id/textView">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="8 935, 48 ₽"
                android:textColor="@color/main_dark"
                android:textSize="@dimen/main_sum_text_size" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_weight="1"
                android:text="@string/events_fr_total_sum"
                android:textColor="@color/main_dark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_1"
            style="@style/EventsFragmentServiceLayout"
            android:layout_margin="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@id/barrier_peek_height"
            app:layout_constraintEnd_toStartOf="@id/main_ll_2"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                style="@style/EventsFragmentServiceIcon"
                android:src="@drawable/main_service1" />

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="@string/events_fr_service_1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_ll_2"
            style="@style/EventsFragmentServiceLayout"
            app:layout_constraintBottom_toBottomOf="@id/main_ll_1"
            app:layout_constraintEnd_toStartOf="@id/main_ll_3"
            app:layout_constraintStart_toEndOf="@id/main_ll_1"
            app:layout_constraintTop_toTopOf="@id/main_ll_1">

            <ImageView
                style="@style/EventsFragmentServiceIcon"
                android:src="@drawable/main_service2" />

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="@string/events_fr_service_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_3"
            style="@style/EventsFragmentServiceLayout"
            android:layout_marginHorizontal="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@id/main_ll_1"
            app:layout_constraintEnd_toEndOf="@+id/gl_v2"
            app:layout_constraintStart_toEndOf="@id/main_ll_2"
            app:layout_constraintTop_toTopOf="@id/main_ll_1">

            <ImageView
                style="@style/EventsFragmentServiceIcon"
                android:src="@drawable/main_service3" />

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="@string/events_fr_service_3" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bottom_sheet"
        android:maxHeight="500dp"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_right" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_default"
            android:layout_marginTop="@dimen/events_fr_margin_ad"
            android:text="Объявления"
            android:textColor="@color/main_dark"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/gl_v1_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/square_icon_size"
            android:layout_height="@dimen/square_icon_size"
            android:background="@drawable/square_little_background_ripple"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/main_bottom_sheet_settings"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@id/gl_v2_bottom"
            app:layout_constraintTop_toTopOf="@+id/textView6" />


        <TextView
            android:id="@+id/tv_filter_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:background="@drawable/main_bottom_filter_black"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="@dimen/events_fr_filter_padding_h"
            android:paddingVertical="@dimen/events_fr_filter_padding_v"
            android:text="@string/events_fr_filter_1"
            android:textColor="@color/white"
            android:textSize="@dimen/events_fr_service_description"
            app:layout_constraintEnd_toStartOf="@id/tv_filter_2"
            app:layout_constraintStart_toStartOf="@id/gl_v1_bottom"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <TextView
            android:id="@+id/tv_filter_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_bottom_filter"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="@dimen/events_fr_filter_padding_h"
            android:paddingVertical="@dimen/events_fr_filter_padding_v"
            android:text="@string/events_fr_filter_2"
            android:textSize="@dimen/events_fr_service_description"
            app:layout_constraintBottom_toBottomOf="@id/tv_filter_1"
            app:layout_constraintEnd_toStartOf="@id/tv_filter_3"
            app:layout_constraintStart_toEndOf="@id/tv_filter_1"
            app:layout_constraintTop_toTopOf="@id/tv_filter_1" />

        <TextView
            android:id="@+id/tv_filter_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/main_bottom_filter"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="@dimen/events_fr_filter_padding_h"
            android:paddingVertical="@dimen/events_fr_filter_padding_v"
            android:text="@string/events_fr_filter_3"
            android:textSize="@dimen/events_fr_service_description"
            app:layout_constraintBottom_toBottomOf="@+id/tv_filter_1"
            app:layout_constraintStart_toEndOf="@id/tv_filter_2"
            app:layout_constraintTop_toTopOf="@+id/tv_filter_1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_events"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_default"
            app:behavior_hideable="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_v2_bottom"
            app:layout_constraintStart_toStartOf="@id/gl_v1_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_filter_1"
            tools:listitem="@layout/item_event" />


    </androidx.constraintlayout.widget.ConstraintLayout>

