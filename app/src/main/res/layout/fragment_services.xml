<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.main.ServicesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_right" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_max_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_peek_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />


        <LinearLayout
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_default"
            android:background="@drawable/search_view_rounded"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/barrier_max_height"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/search_icon_margin"
                android:contentDescription="@string/search_icon_content_desc"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/searchViewEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:layout_weight="1"
                android:background="@drawable/search_view_rounded"
                android:hint="@string/search_view_hint"
                android:orientation="horizontal"
                android:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageButton"
            style="@style/MainRoundImageButton"
            android:layout_marginStart="@dimen/margin_default"
            android:contentDescription="@string/bell_button_content_desc"
            android:src="@drawable/main_bell"
            app:layout_constraintBottom_toBottomOf="@id/searchView"
            app:layout_constraintEnd_toEndOf="@id/gl_v2"
            app:layout_constraintStart_toEndOf="@id/searchView"
            app:layout_constraintTop_toTopOf="@id/searchView" />

        <TextView
            android:id="@+id/textView"
            style="@style/MainTitle"
            android:text="@string/services_fr_services_title"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <ImageView
            android:id="@+id/refresh"
            style="@style/MainRoundImageButtonWhite"
            android:layout_margin="@dimen/margin_default"
            android:src="@drawable/refresh_servicessvg"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@id/gl_v2"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView5"
            style="@style/MainSmallText"
            android:text="Актуально на 30.10.2022"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:id="@+id/main_ll_1"
            style="@style/EventsFragmentServiceLayout"
            android:layout_margin="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@id/barrier_peek_height"
            app:layout_constraintEnd_toStartOf="@id/main_ll_2"
            app:layout_constraintStart_toStartOf="@id/gl_v1"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="Вода" />

            <TextView
                style="@style/ServicesFragmentTariffValue"
                android:text="120/кб.м" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_ll_2"
            style="@style/EventsFragmentServiceLayout"
            app:layout_constraintBottom_toBottomOf="@id/main_ll_1"
            app:layout_constraintEnd_toStartOf="@id/main_ll_3"
            app:layout_constraintStart_toEndOf="@id/main_ll_1"
            app:layout_constraintTop_toTopOf="@id/main_ll_1">

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="Газ" />

            <TextView
                style="@style/ServicesFragmentTariffValue"
                android:text="120/кб.м" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_ll_3"
            style="@style/EventsFragmentServiceLayout"
            android:layout_marginHorizontal="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@id/main_ll_1"
            app:layout_constraintEnd_toEndOf="@+id/gl_v2"
            app:layout_constraintStart_toEndOf="@id/main_ll_2"
            app:layout_constraintTop_toTopOf="@id/main_ll_1">

            <TextView
                style="@style/EventsFragmentServiceDescription"
                android:text="Свет" />

            <TextView
                style="@style/ServicesFragmentTariffValue"
                android:text="120/кВт*ч" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bottom_sheet"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v2_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/main_vertical_gl_right" />

        <TextView
            android:id="@+id/textView6"
            style="@style/MainTitleBottom"
            android:text="@string/events_fr_services_title"
            app:layout_constraintStart_toStartOf="@id/gl_v1_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            style="@style/MainSquareImageButton"
            android:contentDescription="@string/settings_button_content_desc"
            android:src="@drawable/services_cubes"
            android:layout_margin="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@id/gl_v2_bottom"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/ServicesFragmentLocationText"
            android:text="Ярославль"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="@id/textView6"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_services"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_default"
            app:behavior_hideable="true"
            tools:listitem="@layout/item_service"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_v2_bottom"
            app:layout_constraintStart_toStartOf="@id/gl_v1_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

